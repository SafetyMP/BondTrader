[flake8]
max-line-length = 127
extend-ignore = E203, E501, W503, E402, F401, F841, F811, F541
max-complexity = 13
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .coverage,
    htmlcov

per-file-ignores =
    __init__.py:F401
    # Allow unused imports in __init__.py files for exports
    bondtrader/analytics/__init__.py:C901
    # Allow complexity in lazy import function
    bondtrader/data/*:E402
    # Allow imports after try/except for conditional imports
    **/*:E722
    # Allow bare except for error handling patterns
