[flake8]
max-line-length = 127
extend-ignore = E203, E501, W503, E402
max-complexity = 12
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    .tox,
    .coverage,
    htmlcov

per-file-ignores =
    __init__.py:F401
    # Allow unused imports in __init__.py files for exports
    bondtrader/analytics/__init__.py:C901
    # Allow complexity in lazy import function
