# BondTrader Environment Configuration Example
# Copy this file to .env and update with your values

# =============================================================================
# Authentication Configuration
# =============================================================================

# Users in format: username1:password1,username2:password2
# Or set USERS_FILE to point to a JSON file with user data
USERS=admin:change_me_in_production,trader:secure_password,analyst:analyst_pass

# Enable default admin user (development only - set to false in production)
ENABLE_DEFAULT_ADMIN=false
# REQUIRED if ENABLE_DEFAULT_ADMIN=true - no default password allowed
DEFAULT_ADMIN_PASSWORD=admin123

# Path to users JSON file (alternative to USERS env var)
# USERS_FILE=config/users.json

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# API rate limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# Dashboard rate limiting
DASHBOARD_RATE_LIMIT=200
DASHBOARD_RATE_LIMIT_WINDOW=60

# =============================================================================
# Secrets Management Configuration
# =============================================================================

# Backend: env, file, aws, vault
SECRETS_BACKEND=env

# For file backend (REQUIRED if using file backend):
# SECRETS_FILE=.secrets.encrypted
# SECRETS_MASTER_PASSWORD=your_master_password_here  # REQUIRED - no default
# SECRETS_SALT=your_salt_here  # REQUIRED - no default (generate random salt)

# For AWS Secrets Manager:
# SECRETS_BACKEND=aws
# AWS_SECRET_NAME=bondtrader/secrets
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# For HashiCorp Vault:
# SECRETS_BACKEND=vault
# VAULT_ADDR=http://localhost:8200
# VAULT_TOKEN=your_vault_token
# VAULT_SECRET_PATH=secret/bondtrader

# =============================================================================
# API Configuration
# =============================================================================

# API Key Authentication (optional)
# Set REQUIRE_API_KEY=true to enable Bearer token authentication
API_KEY=your_secret_api_key_here
REQUIRE_API_KEY=false  # Set to true to enable API key authentication

# CORS Configuration
# Comma-separated list of allowed origins (e.g., http://localhost:8000,https://api.example.com)
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:8501
# Only set to true in development - allows all origins (security risk in production)
CORS_ALLOW_ALL=false

# =============================================================================
# API Keys (if using env backend)
# =============================================================================

# FRED API Key (for Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key_here

# FINRA API Key (for Financial Industry Regulatory Authority data)
FINRA_API_KEY=your_finra_api_key_here
FINRA_API_PASSWORD=your_finra_password_here

# NASDAQ API Key (for NASDAQ market data)
NASDAQ_API_KEY=your_nasdaq_api_key_here

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Enable Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=8001

# =============================================================================
# Application Configuration
# =============================================================================

# Default risk-free rate (as decimal, e.g., 0.03 for 3%)
DEFAULT_RFR=0.03

# ML model type
ML_MODEL_TYPE=random_forest

# ML test size
ML_TEST_SIZE=0.2

# ML random state
ML_RANDOM_STATE=42

# Minimum profit threshold for arbitrage detection
MIN_PROFIT_THRESHOLD=0.01

# =============================================================================
# Database Configuration
# =============================================================================

# Bond database path (SQLite)
# Defaults to {DATA_DIR}/bonds.db if not set
BOND_DB_PATH=./data/bonds.db

# Database URL (SQLite by default)
# DATABASE_URL=sqlite:///bondtrader.db

# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/bondtrader

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
# LOG_FILE=logs/bondtrader.log

# =============================================================================
# Email Configuration (for alerts)
# =============================================================================

# SMTP server for email alerts
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@bondtrader.local

# =============================================================================
# Development/Testing
# =============================================================================

# Enable debug mode
# DEBUG=false

# Test mode (uses mock data)
# TEST_MODE=false
