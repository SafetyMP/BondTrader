{
	"info": {
		"_postman_id": "bondtrader-api-collection",
		"name": "BondTrader API",
		"description": "Complete API collection for BondTrader - Bond trading, valuation, arbitrage detection, and risk management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "bondtrader"
	},
	"item": [
		{
			"name": "System",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						},
						"description": "Check API health and availability"
					},
					"response": []
				},
				{
					"name": "API Root",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/",
							"host": ["{{base_url}}"],
							"path": [""]
						},
						"description": "Get API information and available endpoints"
					},
					"response": []
				}
			],
			"description": "System endpoints for health checks and API information"
		},
		{
			"name": "Bonds",
			"item": [
				{
					"name": "Create Bond",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"bond_id\": \"BOND-001\",\n  \"bond_type\": \"CORPORATE\",\n  \"face_value\": 1000.0,\n  \"coupon_rate\": 0.05,\n  \"maturity_date\": \"2029-12-31\",\n  \"issue_date\": \"2024-01-01\",\n  \"current_price\": 950.0,\n  \"credit_rating\": \"BBB\",\n  \"issuer\": \"Example Corp\",\n  \"frequency\": 2,\n  \"callable\": false,\n  \"convertible\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/bonds",
							"host": ["{{base_url}}"],
							"path": ["bonds"]
						},
						"description": "Create a new bond in the system"
					},
					"response": []
				},
				{
					"name": "List Bonds",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/bonds?skip=0&limit=100&issuer=&bond_type=",
							"host": ["{{base_url}}"],
							"path": ["bonds"],
							"query": [
								{
									"key": "skip",
									"value": "0",
									"description": "Number of records to skip"
								},
								{
									"key": "limit",
									"value": "100",
									"description": "Maximum number of records"
								},
								{
									"key": "issuer",
									"value": "",
									"description": "Filter by issuer (optional)"
								},
								{
									"key": "bond_type",
									"value": "",
									"description": "Filter by bond type (optional)"
								}
							]
						},
						"description": "List all bonds with optional filtering and pagination"
					},
					"response": []
				},
				{
					"name": "Get Bond",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/bonds/{{bond_id}}",
							"host": ["{{base_url}}"],
							"path": ["bonds", "{{bond_id}}"]
						},
						"description": "Get detailed information about a specific bond"
					},
					"response": []
				}
			],
			"description": "Bond management endpoints"
		},
		{
			"name": "Valuation",
			"item": [
				{
					"name": "Get Bond Valuation",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/bonds/{{bond_id}}/valuation",
							"host": ["{{base_url}}"],
							"path": ["bonds", "{{bond_id}}", "valuation"]
						},
						"description": "Calculate comprehensive valuation metrics for a bond"
					},
					"response": []
				}
			],
			"description": "Bond valuation endpoints"
		},
		{
			"name": "Arbitrage",
			"item": [
				{
					"name": "Find Arbitrage Opportunities",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/arbitrage/opportunities?min_profit_percentage=1.0&limit=10",
							"host": ["{{base_url}}"],
							"path": ["arbitrage", "opportunities"],
							"query": [
								{
									"key": "min_profit_percentage",
									"value": "1.0",
									"description": "Minimum profit percentage threshold"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Maximum number of opportunities"
								}
							]
						},
						"description": "Find arbitrage opportunities across all bonds"
					},
					"response": []
				}
			],
			"description": "Arbitrage detection endpoints"
		},
		{
			"name": "Machine Learning",
			"item": [
				{
					"name": "ML-Enhanced Prediction",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/ml/predict/{{bond_id}}",
							"host": ["{{base_url}}"],
							"path": ["ml", "predict", "{{bond_id}}"]
						},
						"description": "Get ML-enhanced price prediction for a bond"
					},
					"response": []
				}
			],
			"description": "Machine learning prediction endpoints"
		},
		{
			"name": "Risk Management",
			"item": [
				{
					"name": "Get Risk Metrics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/risk/{{bond_id}}",
							"host": ["{{base_url}}"],
							"path": ["risk", "{{bond_id}}"]
						},
						"description": "Calculate comprehensive risk metrics for a bond"
					},
					"response": []
				}
			],
			"description": "Risk management endpoints"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "bond_id",
			"value": "BOND-001",
			"type": "string"
		}
	]
}
